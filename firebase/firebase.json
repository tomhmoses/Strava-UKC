{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "venv",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/callback",
        "function": "callback"
      },
      {
        "source": "/api/addmessage",
        "function": "addmessage"
      },
      {
        "source": "/api/authorize_strava",
        "function": "authorize_strava"
      },
      {
        "source": "/api/verify_authorization",
        "function": "verify_authorization"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
